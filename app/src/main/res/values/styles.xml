<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/colorBlack</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:colorPrimaryDark">@color/colorBlack</item>
        <item name="android:textViewStyle">@style/MainTextStyleDark</item>
        <item name="backgroundPendingCase">@drawable/test</item>
        <item name="colorPrimary">@color/colorBlack</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="colorAccent">@color/colorBlack</item>
        <item name="underlinePendingCase">@color/yellow</item>
        <item name="underlinePressingPendingCase">@color/red</item>





    </style>

    <style name="AppThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/colorWhite</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:colorPrimaryDark">@color/colorWhite</item>
        <item name="android:textViewStyle">@style/MainTextStyleLight</item>
        <item name="backgroundPendingCase">@drawable/test</item>
        <item name="colorPrimary">@color/colorBlack</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="colorAccent">@color/colorBlack</item>
        <item name="underlinePendingCase">@color/yellow</item>
        <item name="underlinePressingPendingCase">@color/red</item>




    </style>

    <style name="btnDialog">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/style_main_buttons</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginRight">6dp</item>

    </style>



    <style name="LightDialog">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorBlack</item>
        <item name="android:editTextColor">@color/colorBlack</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:windowFullscreen">false</item>


    </style>




    <style name="MainTextStyleDark">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MainTextStyleLight">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="textWithBorder">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="paddingEnd">15dp</item>
        <item name="paddingStart">15dp</item>
        <item name="contentPaddingBottom">25dp</item>
<!--        <item name=""></item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
